{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block title %}{{ "Delete Comment?" | translate("comments") }}{% endblock %}

{% block content %}
<h1>{{ "Delete Comment?" | translate("comments") }}</h1>
<p>
{{ "Are you sure you want to delete the comment from &#8220;%s&#8221;?" | translate("comments") | format(comment.author_link()) }}
</p>
<form class="delete" action="{{ url('destroy_comment') }}" method="post" accept-charset="UTF-8">
<fieldset role="presentation">
<div class="confirmation">
<button name="destroy" value="indubitably" class="boo">
<img src="{{ site.chyrp_url }}/admin/images/icons/delete.svg" alt="">{{ "Delete!" | translate }}
</button>
<button name="destroy" value="undecidedly" type="submit" class="yay">
<img src="{{ site.chyrp_url }}/admin/images/icons/cancel.svg" alt="">{{ "Cancel" | translate }}
</button>
</div>
<input type="hidden" name="id" value="{{ comment.id }}" id="id">
<input type="hidden" name="hash" value="{{ authenticate() }}" id="hash">
</fieldset>
</form>
{% endblock %}
